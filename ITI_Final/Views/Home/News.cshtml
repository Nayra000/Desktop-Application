

@model List<News>
<section id="about" class="about">
      <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="section-title">
          <h2> @ViewBag.cat </h2>
        </div>
        <center>
        <div class="row" style="margin: 30px" >
            @foreach(var item in Model){
          <div class="aos-init aos-animate" data-aos="fade-right">
            <img src="~/assets/img/about.jpg" class="img-fluid" style="height:300px ;width:300px" ; border-reduis:50% alt="">
          </div>
          <div class=" pt-4 pt-lg-0 content aos-init aos-animate" data-aos="fade-left">
            <h3>@item.Title</h3>
            <h4>@item.Date</h4>
            <p class="fst-italic">
              @item.Topic
              <center>
            <a class="btn btn-danger" href="/Home/DeleteNews/@item.Id"> Delete </a>
            </center>
          </div>
          <hr/>
          }
        </div>
        </center>
      </div>
    </section>